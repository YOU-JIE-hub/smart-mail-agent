[build-system]
requires = ["setuptools>=65", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "smart_mail_agent"
version = "0.0.0"
requires-python = ">=3.10"
dependencies = [
  "pydantic>=1.10,<3",
  "python-dotenv>=1.0",
  "jinja2>=3.1,<4",
  "reportlab>=3.6,<4",
]

[tool.setuptools.packages.find]
where = ["src"]
