[run]
branch = True
source =
    src/smart_mail_agent
    src/send_with_attachment.py
    src/stats_collector.py
omit =
    */.venv/* */tests/* */__init__.py
    src/modules/* src/spam/* examples/* tools/* scripts/* docs/* site/* data/* reports/* configs/*
[report]
skip_empty = True
show_missing = True
exclude_lines = pragma: no cover
